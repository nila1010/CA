---
const { style, text } = Astro.props
---

<a class={style} href="/#">{text}</a>

<style>
	.blue {
		padding: 20px 30px;
		margin: 0 30px 0 0;
		background-color: var(--brandcolor);
		border-radius: 10px;
		border: 3px solid var(--brandcolor);
	}

	.white {
		padding: 20px 30px;
		margin: 0 30px 0 0;
		border: 3px solid var(--brandcolor);
		background-color: white;
		border-radius: 10px;
		color: var(--brandcolor);
	}
</style>
