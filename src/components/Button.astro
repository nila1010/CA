---
const { style, text } = Astro.props
---

<a class={style} href="/#">{text}</a>

<style>
	.blue {
		padding: 20px 30px;
		transition: all 0.2s;
		background-color: var(--brandcolor);
		border-radius: 10px;
		border: 3px solid var(--brandcolor);
		max-width: fit-content;
	}

	.white {
		padding: 20px 30px;
		border: 3px solid var(--brandcolor);
		background-color: white;
		border-radius: 10px;
		color: var(--brandcolor);
		max-width: fit-content;
		transition: all 0.2s;
	}

	.blueborder {
		margin-right: 20px;
		padding: 20px 30px;
		transition: all 0.2s;
		background-color: var(--brandcolor);
		border-radius: 10px;
		border: 3px solid var(--brandcolor);
		max-width: fit-content;
	}

	.blue:hover {
		background-color: white;
		color: var(--brandcolor);
	}

	.blueborder:hover {
		background-color: white;
		color: var(--brandcolor);
	}

	.white:hover {
		background-color: var(--brandcolor);
		color: white;
	}

	@media (max-width: 480px) {
		a {
			font-size: 15px;
		}
		.blue,
		.white,
		.blueborder {
			padding: 15px 20px;
		}
	}
</style>
