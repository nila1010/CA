---
import MenuIcon from './MenuIcon.astro'
---

<nav>
	<img class="logo1" src="/logoweb.svg" alt="CA karrierepartner og studievejleder" />
	<img class="logo2" src="/favicon.svg" alt="CA karrierepartner og studievejleder" />
	<div class="navright">
		<img class="search" src="/search.svg" alt="Search" />
		<div class="menu">
			<h1>MENU</h1>
			<MenuIcon />
			<h1>EN</h1>
		</div>
		<h1 class="border">Bliv medlem</h1>
		<h1 class="nytmedlem">Anbefal nyt medlem</h1>
		<div class="ca">
			<h1>Mit CA</h1>
			<img class="login" src="/login.svg" alt="login logo" />
		</div>
	</div>
</nav>

<style>
	nav {
		display: flex;
		height: 80px;
		justify-content: space-between;
		align-items: center;
	}

	div {
		height: 100%;
	}

	.search {
		width: 30px;
		margin-right: 5px;
	}

	.menu {
		display: flex;
		align-items: center;
	}

	.menu h1 {
		padding: 0 20px;
	}
	.navright {
		display: flex;

		align-items: center;
	}

	.border {
		border: 0px;
		border-left: 1px solid #4a4a4a;
		border-right: 1px solid #4a4a4a;
	}

	.logo1 {
		width: 25%;
		margin-left: 2rem;
		margin-top: 1.5rem;
	}

	.logo2 {
		display: none;
	}

	a {
		width: fit-content;
	}

	h1 {
		font-family: 'Nexalight', sans-serif;
		font-size: 18px;
		color: #4a4a4a;
		padding: 10px 20px 10px 20px;
		min-width: fit-content;
	}
	.ca {
		display: flex;
		background-color: var(--brandcolor);
		align-items: center;
		padding-right: 40px;
	}
	.ca h1 {
		color: white;
		padding: 10px 10px 10px 20px;
	}

	@media (max-width: 1220px) {
		.logo1 {
			display: none;
		}

		.logo2 {
			display: block;
			margin-left: 2rem;
			width: 6%;
		}
	}

	@media (max-width: 950px) {
		.nytmedlem,
		.border {
			display: none;
		}
	}

	@media (max-width: 500px) {
		.login,
		.search {
			display: none;
		}

		.ca {
			padding: 0 10px 0 0;
		}

		.ca h1 {
			padding: 10px 10px 10px 20px;
		}

		.logo2 {
			width: 15%;
		}
	}
</style>
